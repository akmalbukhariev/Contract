                   VerticalOptions="CenterAndExpand"/>
            <Label Text="{Binding IDNumber}"
                   Style="{StaticResource lbRegularTitle}"
                   TextColor="White"
                   Margin="20,0,0,0"
                   VerticalOptions="CenterAndExpand"/>
        </StackLayout>
        
